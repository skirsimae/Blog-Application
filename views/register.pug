doctype html
html
	head
		style
			include ../public/css/register.css
		link(href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css')
		title Register
	body
		div(class='topnav')
			a(class='active' href='register') Register
			a(href='login') Log in
			a(href='/') Home
		if message
			h3 #{message} 
		h2 Register
		form(action='/register' method='POST' autocomplete='off')
			input(name='newUser' type='text' placeholder='choose an username')
			br
			input(name='newEmail' type='text' placeholder='fill in your email address')
			br
			input(name='newPassword' type='password' placeholder='choose a password')
			br
			button(type='Submit' class='action-button shadow animate blue') Register

