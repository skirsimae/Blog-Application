doctype html
html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		style
			include ../public/css/myposts.css
		link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans:300i' rel='stylesheet' type='text/css')
		title My posts
	body
		div(class='topnav')
			a(class='active' href='myposts') My posts
			a(href='/posts') Create a post
			a(href='/allposts') All posts
			a(href='/profile') Profile
			a(href='/logout') Log out
		br
		if message
			h3 #{message} 
		br
		br
		div(class='box') 
			h1 Here are your posts:
			hr(class="intro-divider")
			each post in posts
				h2 <strong>Title:</strong> &nbsp; #{post.title}
				h2 <strong>Post:</strong> &nbsp; #{post.body}
				br



